  <main class="main">
    <a name="aboutus">
      <section id="aboutus" class="aboutus">
        <div class="wrapper">
          <h2 class="aboutus__header">O nas</h2>
          <div class="aboutus__box">
            <img src="./dist/img/watersSmall.jpg" alt="lake" class="aboutus__box-image">
            <div class="aboutus__box-content">
              <h3 class="aboutus__box-content-title">Niezapomniane przygody</h3>
              <p class="aboutus__box-content-description">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
